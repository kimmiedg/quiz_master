<!DOCTYPE html>
<html>
<head>
  <title>QuizMaster</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
		<div class="container">
	  	<div class="container-fluid">
	      <div class="navbar-header">
		    	<%= link_to "Quiz Master", categories_path, class: "navbar-brand" %>
		    </div>
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav navbar-right">
			        <li class="dropdown">
			        	<!-- IF logged in or not -->
			        	<% if current_user %>
				          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
				          	<%= current_user.name %> <span class="caret"></span></a>
					          <ul class="dropdown-menu">
					            <li><%= link_to "Sign Out", '/logout' %></li>
				            	<li><%= link_to "Score Logs", scores_path(user_id: current_user.id) unless current_user.is_admin %>
					          </ul>
					      <% end %>
			        </li>
			      </ul>
		    </div>
	  	</div>
	  </div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>